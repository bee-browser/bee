#!/usr/bin/env node

'use strict';

const program = require('commander');
const lib = require('../lib');
const { Color, Size } = require('../lib/lms/util');

program
  .description(
    'Convert text dots into layout boxes')
  .option(
    '-b, --box <width>x<height>', 'Box size',
    Size.parse, new Size(10, 10))
  .option(
    '-c, --color <color>', 'Text color',
    Color.parse, Color.parse('black'))
  .option(
    '-m, --mode <mode>', 'Rendering mode',
    /^(absolute|inline|float|)$/i, 'absolute')
  .option(
    '--viewport <width>x<height>', 'Viewport size',
    Size.parse, new Size(1280, 720))
  .arguments(
    '[text]')
  .action(lib.lms.text.run)
  .parse(process.argv);
