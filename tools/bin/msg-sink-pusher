'use strict';

const program = require('commander');
const { run } = require('../lib/msg-sink/pusher');

const HELP = `
  Environment Variables:

    Environment variables listed below have to be defined:

    BEE_TOOLS_MSG_SINK_PUSHER_APP_ID:
      Pusher app_id

    BEE_TOOLS_MSG_SINK_PUSHER_KEY:
      Pusher key

    BEE_TOOLS_MSG_SINK_PUSHER_SECRET:
      Pusher secret

    BEE_TOOLS_MSG_SINK_PUSHER_CLUSTER
      Pusher cluster
`;

program
  .description(
    'Forward JSON message to remote clients via Pusher')
  .option(
    '-c, --channel <channel>',
    'Name of a channel used for forwarding messages')
  .on('--help', () => console.log(HELP))
  .action(run)
  .parse(process.argv);
